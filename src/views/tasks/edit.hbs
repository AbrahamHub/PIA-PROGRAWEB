<div class="block mx-auto my-12 p-8  w-1/3 border rounded-lg shadow-lg text-gray-800" style="background-color: #ffcb51; border:#ffcb51">

  <h1 class="text-center text-5xl font-bold text-white"" style="font-family: 'Bayon', sans-serif;">EDITAR TAREA</h1>

  {{#each tasks}}
  <form action="" method="POST" class="mt-4">

    <input type="text" class="border border-gray-200 rounded-md bg-white-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Task title" name="title" value="{{title}}">

    <textarea class="border border-gray-200 rounded-md bg-white-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white h-40" placeholder="Task description" name="description">{{description}}</textarea>

    <button type="submit" class="rounded-md w-full text-lg text-white font-semibold p-2 my-3
      hover:bg-green-600 focus:bg-green-700" style="background-color: #ffa124; font-family: 'Montserrat', sans-serif;">ENVIAR</button>

  </form>
  {{/each}}

</div>