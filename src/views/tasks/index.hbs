<head>
  <!--Fuentes de google-->
  <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bayon&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
</head>
<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
  <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg mt-12">

    <table class="table-fixed w-full">
      <thead>
        <tr class=" text-white" style="background-color: #ffa124;">
          <th class="w-20 py-4 ..." style="font-family: 'Montserrat', sans-serif;">ID</th>
          <th class="w-1/4 py-4 ..." style="font-family: 'Montserrat', sans-serif;">TITULO</th>
          <th class="w-1/2 py-4 ..." style="font-family: 'Montserrat', sans-serif;">DESCRIPCION</th>
          <th class="w-28 py-4 ..." style="font-family: 'Montserrat', sans-serif;">ACCIONES</th>
        </tr>
      </thead>
      <tbody>
        {{#each tasks}}
        <tr>
          <td class="py-3 px-6">{{id}}</td>
          <td class="p-3">{{title}}</td>
          <td class="p-3 text-center">{{description}}</td>
          <td class="p-3 flex">
            <form action="/tasks/delete" method="POST" class="mx-2">
              <input type="hidden" value="{{id}}" name="id">
              <button class="bg-red-500 text-white px-3 py-1 rounded-sm" type="submit">
                <i class="fas fa-trash"></i></button>
            </form>
            <a href="/tasks/edit/{{id}}" class="bg-green-500 text-white px-3 py-1 rounded-sm">
              <i class="fas fa-pen"></i></a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>